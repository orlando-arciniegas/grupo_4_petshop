            <button class="bg-transparent border-0" id="headerBottomToggler"><i class="fa fa-bars"></i></button>
        </div>

        <form action="/" method="GET" id=buscar>
            <input placeholder=" Buscar productos, marcas" type="text" name="buscar">
            <button type="submit" class="search-btn h-25 my-1"><i class="fas fa-search fa-1x"></i></button>
        </form>
    </div>
    <div class="header-bottom">
        <nav class="menu">
