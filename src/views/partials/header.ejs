<header>
    <div class="header-top">
        <figure id="logo">
            <a href="/">
                <img src="/img/logo.png" alt="logo furry">
            </a>
        </figure>
        <% if (locals.isLogged) { %>
            <div>
                <p class='welcome px-0'><%= 'Hola '+ locals.userLogged.firstName %></p>
         
            </div>
            <div id="account">
                
                <ul>
                    <li><i class="fa fa-user-alt"></i>
                        <ul class="mx-auto px-0">
                            <li><a class="mx-auto w-100" href="/producto">Administrar</a></li>
                            <li><a class="mx-auto w-100" href="/usuario/logout">Cerrar sesi√≥n</a></li>      
                        </ul>
                    </li>
                </ul>
            </div>
            
        <% } else {%>
            <div id="account">
                <ul>
                    <li><i class="fa fa-user-alt"></i>
                        <ul class="mx-auto px-0">
                            <li><a class="mx-auto w-100" href="/usuario/login">Iniciar sesion</a></li>
                            <li><a class="mx-auto w-100" href="/usuario/register">Registrarse</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        <% } %>
        <div id="cart">
            <button class="bg-transparent border-0" id="carro"><i class="fa fa-shopping-cart"></i>
            <span class="me-0">0</span></button>
        </div>
