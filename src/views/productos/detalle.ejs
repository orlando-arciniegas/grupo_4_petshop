<!DOCTYPE html>
<html lang="en">
<head>
    <!------------ HEAD  ---------->
    <%- include  ('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/detalle.css">
    <title>Productos | Pets</title>
</head>
<body>
    <!--HEADER -->
    <%- include  ('../partials/header.ejs') %>

    <!-- MAIN -->
    <main class="main">
        <figure class="figure">
            <img class="imgProd" src="/img/productos/<%= producto.image %> " alt="<%= producto.name %>">
            <img class="miniProd" src="/img/productos/<%= producto.image %> " alt="mini <%= producto.name %>">
        </figure>
        <div class="detProd">
            <h2 class="detalle"><%= producto.name %>.</h2>
            <h2 class="precioProd">$ <%= producto.price %></h2>
        </div>
        <div class="agregar">
            <button class="button" type="submit">AGREGAR AL CARRITO</button>
            <div class="detalles-cantidad detalleCant">
                <button type="" class="menos">-</button>
                <input type="text" value="1">
                <button class="mas">+</button>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <%- include  ('../partials/footer.ejs') %>
</body>
</html>